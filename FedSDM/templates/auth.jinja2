{% extends 'base.jinja2' %}
{% block title %}Dashboard SDM Federation{% endblock %}
{% block headerarea %}{% endblock %}

{% block content %}
<div class="auth-panel card bg-white">
    <div class="card-header">
        <h3 class="card-title">Please {% if operation == 'Login' %}Sign In{% else %}{{ operation }}{% endif %}</h3>
    </div>
    <div class="card-body">
        {% for message in get_flashed_messages() %}
            <div class="flash"> {{ message }}</div>
        {% endfor %}
        <form role="form" method="post">
            <fieldset>
                <div class="form-group row">
                    <div class="col-lg-4">
                        <label for="username" id="username-label">Username:</label>
                    </div>
                    <div class="col-lg-8 col-auth">
                        <input class="form-control" placeholder="username" name="username" id="username" type="text" autofocus required>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-lg-4">
                        <label for="password" id="password-label">Password:</label>
                    </div>
                    <div class="col-lg-8 col-auth">
                        <input class="form-control" placeholder="password" name="password" id="password" type="password" value="" required>
                    </div>
                </div>
                {% if operation == 'Login' %}
                    <div class="checkbox">
                        <label>
                            <input name="remember" type="checkbox" value="Remember Me"> Remember Me
                        </label>
                    </div>
                {% endif %}
                <input type="submit" class="btn btn-lg btn-success btn-block" value="{{ operation }}">
                <a href="{{ url_for('auth.' ~ other|lower ) }}">{{ other }}</a>
            </fieldset>
        </form>
    </div>
<!--    <div class="card-footer"></div> -->
</div>
{% endblock %}
